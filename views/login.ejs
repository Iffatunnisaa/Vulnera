<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Vulnera</title>
    <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
    <div class="login-container">
        
        <!-- Form kiri -->
        <div class="form-section">
            <div class="w-full max-w-md flex flex-col">
                <h1>Masuk ke Akun Vulnera</h1>
            <form action="/login" method="POST">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>

                <label for="password">Kata Sandi</label>
                <div class="password-wrapper">
                    <input type="password" id="password" name="password" required>
                    <span class="toggle-password" id="togglePassword">ğŸ‘</span>
                </div>

                <div class="forgot-password">
                    <a href="#">Lupa Kata Sandi?</a>
                </div>

                <button type="submit">Masuk</button>
            </form>
            <p class="register-text">Belum punya akun? <a href="/register">Daftar disini</a></p>
            </div>
            
        </div>

        <!-- Gambar kanan -->
        <div class="image-section">
            <img src="/public/images/login.jpeg" alt="Login Illustration">
        </div>
    </div>

    <script>
        const togglePassword = document.getElementById("togglePassword");
        const passwordField = document.getElementById("password");

        togglePassword.addEventListener("click", () => {
            const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
            passwordField.setAttribute("type", type);
            togglePassword.textContent = type === "password" ? "ğŸ‘" : "ğŸ”’";
        });
    </script>
</body>
</html>
