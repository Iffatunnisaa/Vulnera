<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Register | OxyPlant" %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
  <div class="flex min-h-screen">
    <!-- Bagian Kiri: Background Gambar Daun -->
    <div
      class="w-1/2 min-h-screen bg-cover bg-center"
      style="background-image: url('/img/d2.jpeg');"
    >
    </div>

    <!-- Bagian Kanan: Form Register -->
    <div class="w-1/2 flex items-center justify-center p-8" style="background-color: #F2F1EB;">
      <div class="w-full max-w-md flex flex-col">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-green-700 mb-2">
            Buat Akun OxyPlant
          </h2>
          <p class="text-gray-600">
            Satu akun untuk semua produk Garden OxyPlant
          </p>
        </div>

        <form
          class="space-y-4 flex-grow flex flex-col"
          method="POST"
          action="/register"
        >
          <!-- CSRF (kalau kamu pakai csurf middleware di Express) -->
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="flex-grow space-y-4">
            <!-- Nama Lengkap -->
            <div>
              <label class="block text-gray-700 text-sm font-medium mb-1">Nama Lengkap</label>
              <input
                name="fullname"
                type="text"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent transition"
                placeholder="Nama lengkap Anda"
              />
            </div>

            <!-- Username -->
            <div>
              <label class="block text-gray-700 text-sm font-medium mb-1">Username</label>
              <input
                name="username"
                type="text"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent transition"
                placeholder="Username unik"
              />
            </div>

            <!-- Email -->
            <div>
              <label class="block text-gray-700 text-sm font-medium mb-1">Email</label>
              <input
                name="email"
                type="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent transition"
                placeholder="email@example.com"
              />
              <p class="text-xs text-gray-500 mt-1">
                Kami tidak akan membagikan data pribadi Anda
              </p>
            </div>

            <!-- Kata Sandi -->
            <div>
              <label class="block text-gray-700 text-sm font-medium mb-1">Kata Sandi</label>
              <div class="relative">
                <input
                  id="password"
                  name="password"
                  type="password"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent transition"
                  placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                />
                <button
                  type="button"
                  onclick="togglePassword('password', 'eye-icon')"
                  class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700"
                >
                  <span id="eye-icon">üîí</span>
                </button>
              </div>
            </div>

            <!-- Konfirmasi Kata Sandi -->
            <div>
              <label class="block text-gray-700 text-sm font-medium mb-1">Konfirmasi Kata Sandi</label>
              <div class="relative">
                <input
                  id="confirm-password"
                  name="confirmPassword"
                  type="password"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent transition"
                  placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                />
                <button
                  type="button"
                  onclick="togglePassword('confirm-password', 'confirm-eye-icon')"
                  class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700"
                >
                  <span id="confirm-eye-icon">üîí</span>
                </button>
              </div>
            </div>
          </div>

          <div class="mt-auto text-center">
            <button
              type="submit"
              class="w-full max-w-xs bg-gradient-to-r from-green-500 to-green-600 text-white py-2.5 px-4 rounded-lg font-medium hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 transition shadow-sm"
            >
              Daftar
            </button>
          </div>
        </form>

        <div class="text-center mt-6">
          <p class="text-sm text-gray-600">
            Sudah punya akun? <a href="/login" class="text-green-700 font-medium hover:underline">Masuk disini</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Script toggle password -->
  <script>
    function togglePassword(inputId, iconId) {
      const passwordInput = document.getElementById(inputId);
      const eyeIcon = document.getElementById(iconId);
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        eyeIcon.textContent = "üëÅÔ∏è";
      } else {
        passwordInput.type = "password";
        eyeIcon.textContent = "üîí";
      }
    }
  </script>
</body>
</html>
